<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/iv_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:visibility="gone"
            />


    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4" />

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/loading"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/web_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_main_home_icon"/>

                <TextView
                    android:id="@+id/tv_home"
                    style="@style/main_button_text"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:text="首页"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_betting"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_betting"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_main_history_icon"/>

                <TextView
                    android:id="@+id/tv_betting"
                    style="@style/main_button_text"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:text="游戏"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_money"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_main_money_icon"/>

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/main_button_text"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:text="资金"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_main_mine_icon"/>

                <TextView
                    android:id="@+id/tv_mine"
                    style="@style/main_button_text"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:text="我的"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/selector_main_more"/>

                <TextView
                    android:id="@+id/tv_more"
                    style="@style/main_button_text"
                    android:duplicateParentState="true"
                    android:focusableInTouchMode="false"
                    android:text="更多"/>
            </LinearLayout>




        </LinearLayout>

        </LinearLayout>
</LinearLayout>